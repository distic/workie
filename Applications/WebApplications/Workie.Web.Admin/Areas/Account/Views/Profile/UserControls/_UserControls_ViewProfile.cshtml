@inject IViewLocalizer Localizer

@model Workie.Web.Admin.Areas.Account.Models.Profile.ViewProfileViewModel

<div class="col-md-12">
    <div class="ms-panel">
        <div class="ms-panel-header">
            <h6>
                @Localizer["View Profile"]
            </h6>
        </div>
        <div class="ms-panel-body">
            <form>
                <div class="form-group">
                    <label for="exampleEmail">
                        @Localizer["First Name"]
                    </label>
                    <input id="FirstName" name="FirstName" class="form-control" value="Ahmad" readonly="">
                </div>
                <div class="form-group">
                    <label for="exampleEmail">
                        @Localizer["Last Name"]
                    </label>
                    <input id="LastName" name="LastName" class="form-control" value="Chatila" readonly="">
                </div>
                <div class="form-group">
                    <label for="exampleEmail">
                        @Localizer["Email address"]
                    </label>
                    <input id="EmailAddress" name="EmailAddress" class="form-control" value="ahmadnshatila@hotmail.com" readonly="">
                </div>
                <input type="button" onclick="ProfileModule.editProfile()" class="btn btn-outline-primary d-block mt-5" value="@Localizer["Edit"]" name="btn0">
            </form>
        </div>
    </div>
</div>