@inject IViewLocalizer Localizer

@model Workie.Web.Admin.Areas.Account.Models.Profile.EditProfileViewModel

<div class="col-md-12">
    <div class="ms-panel">
        <div class="ms-panel-header">
            <h6>
                @Localizer["Edit Profile"]
            </h6>
        </div>
        <div class="ms-panel-body">
            <form>
                <div class="form-group">
                    <label for="exampleEmail">
                        @Localizer["First Name"]
                    </label>
                    <input id="FirstName" name="FirstName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleEmail">
                        @Localizer["Last Name"]
                    </label>
                    <input id="LastName" name="LastName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleEmail">
                        @Localizer["Email address"]
                    </label>
                    <input id="EmailAddress" name="EmailAddress" type="email" class="form-control" placeholder="@Localizer["name@example.com"]">
                </div>

                <input type="submit" class="btn btn-dark mt-5" value="@Localizer["Save"]" name="btn0">
                <input type="submit" class="btn btn-outline-primary mt-5 ml-2" value="@Localizer["Cancel"]" name="btn0">
            </form>
        </div>
    </div>
</div>